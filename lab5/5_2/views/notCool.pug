html
    head
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js')
        script.
            $(document).ready(() => {
                setInterval(() => {
                    $.ajax({
                        type: "get",
                        url: "users/notCool",
                        dataType: "html",
                        success: (result) => {
                            $("#voltage").html('voltage: ' + result);
                        },
                        error: (error) => {
                            alert(error);
                        }
                    });
                }, 1000);
            })

    body
        p(id="voltage") voltage:Unknown
        form(action='/users', method='get')
            input(type="radio", value="YES", name="toDOrNotToD")
            label(for="option1") TO_DETECT
            input(type="radio", value="NO", name="toDOrNotToD")
            label(for="option2") NOT_TO_DETECT
            br
            input(type='submit', value='Submit')
